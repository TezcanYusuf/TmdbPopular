<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.nextlua.nextluacase.models.Result" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.MovieDetailFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/movie_img"
            movie_image="@{movie.posterPath}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_255sdp"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/movie_img_transparent2"
            movie_image="@{movie.backdropPath}"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:scaleType="center"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="@+id/movie_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:textSize="@dimen/_15sdp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@{movie.title}"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="@+id/movie_img_transparent2"
            app:layout_constraintTop_toTopOf="@+id/movie_img_transparent2" />

        <TextView
            android:id="@+id/movie_date"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="@{movie.releaseDate}"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/movie_name"
            app:layout_constraintTop_toBottomOf="@+id/movie_name" />

        <TextView
            android:id="@+id/movie_popularity_title"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="@string/popularity"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="@+id/movie_date"
            app:layout_constraintTop_toBottomOf="@+id/movie_img" />

        <TextView
            android:id="@+id/movie_popularity"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:layout_marginStart="@dimen/_3sdp"
            android:text="@{Double.toString(movie.popularity)}"
            android:textAlignment="textStart"
            android:textColor="@color/transparent_gray"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/movie_popularity_title"
            app:layout_constraintTop_toTopOf="@+id/movie_popularity_title" />

        <TextView
            android:id="@+id/movie_desc_title"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/overview"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/movie_popularity_title"
            app:layout_constraintTop_toBottomOf="@+id/movie_popularity_title" />

        <TextView
            android:id="@+id/movie_desc"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_170sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@{movie.overview}"
            android:textAlignment="textStart"
            android:textColor="@color/transparent_gray"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/movie_desc_title"
            app:layout_constraintTop_toBottomOf="@+id/movie_desc_title" />

        <include
            android:id="@+id/score"
            layout="@layout/tmdb_score_tool"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="@+id/movie_img"
            app:layout_constraintEnd_toEndOf="@+id/movie_img"
            app:movie2="@{movie}"
            android:layout_margin="@dimen/_18sdp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
